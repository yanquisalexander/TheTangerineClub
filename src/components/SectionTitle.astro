---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<h2
    class="text-5xl font-atomic px-4 lowercase font-thin transform -skew-y-3 leading-tight relative text-zinc-200 select-none"
>
    {title}
</h2>

<style>
    h2:after {
        content: "a";
        @apply font-atomic-extras text-[120px] mt-4 absolute inset-x-0 -skew-y-6;
        z-index: -1;
    }
</style>
